<%= form_with(url: "/users/#{current_user.id}/ambientes/#{@ambiente_atual.id}/adicionar") do |form| %>
  
  <% if @ambiente_atual.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@ambiente_atual.errors.count, "error") %> prohibited this user from being added:</h2>
      <ul>
        <% @ambiente_atual.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  

  <div>
    <%= form.label :email, style: "display: block" %>
