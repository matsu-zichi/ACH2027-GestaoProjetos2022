<h1>Questions List</h1>
<div id="questions">
<table class="table">
  <thead>
    <tr>
      <th scope="col">Descricao</th>
      <th scope="col">Tipo</th>
      <th scope="col">Dificuldade</th>
      <th scope="col">Resposta</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
  <% @questions.each do |question| %>
    
      <tr>
        <td><%= question.descricao %></td>
        <td><%= question.tipo %></td>
        <td><%= question.dificuldade %></td>
        <td><%= question.resposta %></td>
        <td><%= button_to 'Destroy Question', user_ambiente_exam_question_path, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}}, class:"btn btn-danger" %></td>
      </tr>
      
  <% end %>
  </tbody>
</table>
</div>

<%= link_to "New question", new_user_ambiente_exam_question_path, class: "btn btn-secondary" %>


